<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>#DidTheyForget</title>
  </head>
  <body>
    <div class="search">
      <form action="/search" method="get">
        <input type="text" name="handle" placeholder="@congressperson">
        <input type="submit" name="submit" value="Search">
      </form>
    </div>
    <div class="results">
      <% if (results) { %>
        <% if (Array.isArray(results)) { %>
          <% if (results.length < 1) { %>
            <p>No results to show.</p>
          <% } %>
          <% results.forEach(result => { %>
            <div class="prevTweetText">
              <%= result %>
            </div>
          <% }) %>
        <% } else { %>
          <p><%= results %></p>
        <% } %>
      <% } %>
    </div>
  </body>
</html>
